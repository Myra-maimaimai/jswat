<!DOCTYPE filesystem
  PUBLIC "-//NetBeans//DTD Filesystem 1.1//EN"
         "http://www.netbeans.org/dtds/filesystem-1_1.dtd">
<filesystem>
    <folder name="Menu">
        <folder name="Window">
            <!-- Re-use the menu defined in the ui module. -->
            <folder name="Debugging">
                <attr name="com-bluemarsh-jswat-ui-actions-EvaluatorViewAction.shadow/com-bluemarsh-jswat-command-view-CommandViewAction.instance" boolvalue="true"/>
                <file name="com-bluemarsh-jswat-command-view-CommandViewAction.instance"/>
            </folder>
        </folder>
    </folder>

    <folder name="Shortcuts">
        <!-- O = Alt, S = Shift, D = Ctrl (O and D work on PC or Mac, whereas
             A and C are platform specific, i.e. they differ on PC and Mac) -->
        <file name="OS-9.instance">
            <attr name="instanceClass" stringvalue="com.bluemarsh.jswat.command.view.CommandViewAction"/>
        </file>
    </folder>

    <folder name="Windows2">
        <folder name="Components">
            <file name="command.settings" url="resources/command.settings"/>
        </folder>

        <!-- Note that without Modes and Groups, the windows would not
             remember their open status when the application restarts. -->
        <folder name="Modes">
            <!-- Re-use the mode defined in the ui module. -->
            <folder name="debugger">
                <file name="command.wstcref" url="resources/command.wstcref"/>
            </folder>
        </folder>

        <folder name="Groups">
            <!-- Re-use the group defined in the ui module. -->
            <folder name="debugger">
                <file name="command.wstcgrp" url="resources/command.wstcgrp"/>
            </folder>
        </folder>
    </folder>
</filesystem>
