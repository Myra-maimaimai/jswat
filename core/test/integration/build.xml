<project name="core.integration.test" default="compile" basedir=".">

  <!-- Permit external customizations: -->
  <property file="build.properties"/>
  <property file="../../../build.properties"/>

  <!-- Location of sources. -->
  <property name="src" value="src"/>
  <!-- Location of build generated files. -->
  <property name="build" value="build"/>

  <path id="class.path">
    <pathelement location="${java.home}/../lib/tools.jar"/>
  </path>

  <target name="prepare">
    <mkdir dir="${build}"/>
  </target>

  <target name="clean" description="Removes the build generated files.">
    <delete dir="${build}"/>
    <delete includeEmptyDirs="true">
      <!-- Remove classes generated by the IDE. -->
      <fileset dir="src" includes="**/*.class"/>
    </delete>
  </target>

  <target name="compile" depends="prepare"
          description="Compile the integration tests.">
    <javac srcdir="${src}" destdir="${build}" classpathref="class.path"
           debug="on" deprecation="on" source="1.5"/>
  </target>
</project>
